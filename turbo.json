{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "node_modules/**",
        "dist/**",
        ".turbo/**"
      ]
    },
    "deploy": {
      "dependsOn": ["clean", "^build"]
    }
  }
}
